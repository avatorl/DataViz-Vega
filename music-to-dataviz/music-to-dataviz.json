    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "dataset", "field": "part"},
      "range": ["green", "yellow", "orange", "red", "blue"]
    },
    {
      "name": "size",
      "type": "ordinal",
      "domain": {"data": "dataset", "field": "duration"},
      "range": [0, 100]
    },
    {
      "name": "scale-size-for-legend",
      "type": "ordinal",
      "domain": {"data": "dataset-for-legend", "field": "duration"},
      "range": [0, 100]
    }
  ],
  "title": {
    "text": "Piano Quintet No. 2 in C Minor Op. 115 - Gabriel Fauré",
    "color": "#CCCCCC",
    "anchor": "start",
    "fontSize": 24,
    "subtitle": {
      "signal": "length(data('dataset'))+' musical notes, playing time 30-35 minutes'"
    },
    "subtitlePadding": 5,
    "subtitleColor": "#CCCCCC",
    "subtitleFontSize": 20,
    "offset": 10
  },
  "axes": [],
  "legends": [
    {
      "type": "symbol",
      "orient": "right",
      "stroke": "color",
      "fill": "color",
      "title": "Instrument",
      "titleFontSize": 22,
      "titleColor": "#CCCCCC",
      "labelFontSize": 20,
      "labelColor": "#CCCCCC",
      "offset": 5,
      "padding": 5,
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "enter": {
            "strokeWidth": {"value": 1},
            "strokeOpacity": {"value": 0.8},
            "size": {"value": 100},
            "cursor": {"value": "pointer"}
          },
          "update": {
            "fillOpacity": {"value": 0.4},
            "strokeWidth": {"value": 2},
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 0.7
              },
              {"value": 0.15}
            ],
            "size": {"value": 100}
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "enter": {"cursor": {"value": "pointer"}},
          "update": {
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 1
              },
              {"value": 0.25}
            ]
          }
        }
      }
    },
    {
      "type": "symbol",
      "orient": "right",
      "size": "scale-size-for-legend",
      "title": "Note Duration",
      "titleFontSize": 22,
      "titleColor": "#CCCCCC",
      "labelFontSize": 20,
      "labelColor": "#CCCCCC",
      "offset": 5,
      "padding": 5,
      "encode": {
        "symbols": {
          "update": {
            "stroke": {"value": "#CCCCCC"},
            "strokeWidth": {"value": 1},
            "strokeOpacity": {"value": 0.8},
            "size": {"signal": "pow(datum.value,0.999)*5"},
            "fillOpacity": {"value": 0.4}
          }
        },
        "labels": {"enter": {"dx": {"value": 5}, "opacity": {"value": 1}}}
      }
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "dataset"},
      "encode": {
        "enter": {
          "x": {"signal": "-100+radius + radius*datum['dx']"},
          "y": {"signal": "radius + radius*datum['dy']"},
          "size": {"signal": "pow(datum['duration'],0.999)*5"},
          "shape": {"value": "circle"},
          "strokeWidth": {"value": 0.5},
          "tooltip": {
            "signal": "datum.part+' '+datum.stepname+datum.octave+' alter '+datum.alter+' duration '+datum.duration"
          }
        },
        "update": {
          "stroke": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "scale": "color",
              "field": "part"
            },
            {"value": "#CCCCCC"}
          ],
          "fill": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "scale": "color",
              "field": "part"
            },
            {"value": "#CCCCCC"}
          ],
          "strokeOpacity": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "signal": "0.5"
            },
            {"signal": "0.25"}
          ],
          "fillOpacity": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "signal": "0.2"
            },
            {"signal": "0.05"}
          ]
        }
      }
    },
    {
      "type": "symbol",
      "encode": {
        "enter": {
          "fill": {"value": "#CCCCCC"},
          "stroke": {"value": "#CCCCCC"},
          "baseline": {"value": "middle"},
          "x": {"signal": "-100-5+2"},
          "y": {"signal": "radius*2-150-7"},
          "angle": {"signal": "110"},
          "size": {"signal": "0.00025"},
          "shape": {"signal": "svgCircleArrow"},
          "opacity": {"value": 1},
          "strokeWidth": {"signal": "0"},
          "strokeOpacity": {"signal": "1"}
        }
      }
    },
    {
      "type": "symbol",
      "encode": {
        "enter": {
          "fill": {"value": "yellow"},
          "stroke": {"value": "yellow"},
          "baseline": {"value": "middle"},
          "x": {"signal": "-150+5"},
          "y": {"signal": "radius*2-150"},
          "angle": {"signal": "45"},
          "size": {"signal": "0.0003"},
          "shape": {"signal": "svgRadialArrows"},
          "opacity": {"value": 1},
          "strokeWidth": {"signal": "0"},
          "fillOpacity": {"signal": "0.8"},
          "strokeOpacity": {"signal": "1"}
        }
      }
    },
    {
      "type": "symbol",
      "encode": {
        "enter": {
          "fill": {"value": "yellow"},
          "stroke": {"value": "yellow"},
          "baseline": {"value": "middle"},
          "x": {"signal": "-150+5+60"},
          "y": {"signal": "radius*2-150"},
          "angle": {"signal": "90+45"},
          "size": {"signal": "0.0003"},
          "shape": {"signal": "svgRadialArrows"},
          "opacity": {"value": 1},
          "strokeWidth": {"signal": "0"},
          "fillOpacity": {"signal": "0.8"},
          "strokeOpacity": {"signal": "1"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "fill": {"value": "yellow"},
          "stroke": {"value": "yellow"},
          "baseline": {"value": "middle"},
          "x": {"signal": "-150+5+10+60-10+5+3"},
          "y": {"signal": "radius*2-150+30+25+5"},
          "fontSize": {"value": 18},
          "text": {"signal": "'Pitch'"},
          "opacity": {"value": 1},
          "strokeWidth": {"signal": "0"},
          "fillOpacity": {"signal": "0.8"},
          "strokeOpacity": {"signal": "1"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "fill": {"value": "#CCCCCC"},
          "baseline": {"value": "middle"},
          "x": {"signal": "-150+5+10+60-10+5"},
          "y": {"signal": "radius*2-150+30-25"},
          "fontSize": {"value": 18},
          "text": {"signal": "'Time'"},
          "opacity": {"value": 1},
          "strokeWidth": {"signal": "0"},
          "strokeOpacity": {"signal": "1"}
